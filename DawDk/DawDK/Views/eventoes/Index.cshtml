@model IEnumerable<DawDK.evento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<aside class="right-side">

    <p>
        @Html.ActionLink("Novo", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local_Evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agenda)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Local_Evento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Agenda)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_evento }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id_evento }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.Id_evento })
                </td>
            </tr>
        }

    </table>
    </aside>